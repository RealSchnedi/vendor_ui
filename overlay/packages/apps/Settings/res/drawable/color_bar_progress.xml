<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle"
               android:tint="@*android:color/progress_bar_color_material">
            <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
            <size android:height="@*android:dimen/progress_bar_height_material" />
            <solid android:color="@*android:color/white_disabled_material" />
        </shape>
    </item>r
    <item android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle"
                   android:tint="?android:attr/colorAccent">
                <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
                <size android:height="@*android:dimen/progress_bar_height_material" />
                <solid android:color="@*android:color/white_disabled_material" />
            </shape>
        </scale>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle"
                   android:tint="?android:attr/colorAccent">
                <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
                <size android:height="@*android:dimen/progress_bar_height_material" />
                <solid android:color="@android:color/white" />
            </shape>
        </scale>
    </item>
</layer-list>
