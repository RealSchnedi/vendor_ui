<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">

    <style name="ContextualCardStyle">
        <item name="cardBackgroundColor">@color/cardpreference_bg</item>
    </style>

    <style name="custom_text_primary">
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="custom_text_secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HomepageTitleText" parent="CollapsingToolbarTitle.Expanded">
        <item name="android:layout_marginHorizontal">?android:attr/listPreferredItemPaddingStart</item>
    </style>

    <style name="AccessibilityTextReadingPreviewTitle"
        parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title" >
        <item name="android:textSize">0sp</item>
    </style>

    <style name="PreviewPagerPageIndicator">
        <item name="pageIndicatorColor">@color/page_indicator_color</item>
        <item name="currentPageIndicatorColor">?android:attr/colorAccent</item>
    </style>

</resources>
