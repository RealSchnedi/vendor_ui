<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.CategoryTitle"
           parent="@*android:style/TextAppearance.DeviceDefault.Body2">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsPreferenceTheme" parent="@style/PreferenceTheme.SettingsLib">
        <item name="preferenceCategoryStyle">@style/Preference.Custom.Category</item>
        <item name="preferenceCategoryTitleTextAppearance">@style/TextAppearance.CategoryTitle</item>
    </style>

    <style name="Preference.Custom.Category" parent="@style/Preference.Category">
        <item name="allowDividerBelow">false</item>
        <item name="android:layout">@layout/custom_category</item>
        <item name="android:selectable">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>

    <style name="PreferenceCategoryTitleTextStyle">
        <item name="android:textAppearance">?preferenceCategoryTitleTextAppearance</item>
        <item name="android:textColor">@color/custom_category</item>
    </style>

</resources>
