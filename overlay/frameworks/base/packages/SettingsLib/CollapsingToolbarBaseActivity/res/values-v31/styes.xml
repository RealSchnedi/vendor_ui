<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CollapsingToolbarTitle.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CollapsingToolbarTitle.Expanded" parent="CollapsingToolbarTitle.Collapsed">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="custom_toolbar.Expanded" parent="custom_toolbar.Collapsed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/header_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/header_title_margin_bottom</item>
        <item name="android:layout_marginStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:layout_marginEnd">@dimen/header_title_margin_end</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="custom_toolbar.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:fontFamily">@*android:config/config_headlineFontFamily</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">20dp</item>
    </style> 

</resources>
