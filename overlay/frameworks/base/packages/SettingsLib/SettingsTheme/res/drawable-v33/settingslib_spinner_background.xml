<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/settingslib_ripple_color">
    <item android:id="@android:id/background">
        <layer-list
            android:paddingMode="stack"
            android:paddingStart="0dp"
            android:paddingEnd="24dp">
            <item
                android:top="8dp"
                android:bottom="8dp">

                <shape>
                    <corners android:radius="@*android:dimen/config_dialogCornerRadius" />
                    <solid android:color="@color/spinner_bg" />
                    <size android:height="@dimen/settingslib_spinner_height" />
                </shape>
            </item>

            <item
                android:gravity="center|end"
                android:width="18dp"
                android:height="18dp"
                android:end="12dp"
                android:drawable="@drawable/settingslib_arrow_drop_down" />
        </layer-list>
    </item>
</ripple>
